{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "includeFiles": ["build/**"]
      }
    },
    {
      "src": "Backend/app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["Backend/**/*.js", "Backend/**/*.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Backend/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}